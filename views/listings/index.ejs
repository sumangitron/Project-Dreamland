<% layout("/layouts/boilerplate") %>

<body>
    <div class="d-flex justify-content-between mt-3 mb-4">
        <div class="d-flex flex-column align-items-center pt-2 icon two">
            <i class="fa-solid fa-fire"></i>
            <p class="font mb-0">Trending</p>
        </div>
        <div class="d-flex flex-column align-items-center pt-2 icon three">
            <i class="fa-solid fa-bed"></i>
            <p class="font mb-0">Rooms</p>
        </div>
        <div class="d-flex flex-column align-items-center pt-2 icon three">
            <i class="fa-solid fa-mountain-city"></i>
            <p class="font mb-0">Cites</p>
        </div>
        <div class="d-flex flex-column align-items-center pt-2 icon four">
            <i class="fa-solid fa-mountain"></i>
            <p class="font mb-0">Mountains</p>
        </div>
        <div class="d-flex flex-column align-items-center pt-2 icon four">
            <i class="fa-brands fa-fort-awesome"></i>
            <p class="font mb-0">Castles</p>
        </div>
        <div class="d-flex flex-column align-items-center pt-2 icon four">
            <i class="fa-solid fa-person-swimming"></i>
            <p class="font mb-0">Pools</p>
        </div>
        <div class="d-flex flex-column align-items-center pt-2 icon seven">
            <i class="fa-solid fa-campground"></i>
            <p class="font mb-0">Camping</p>
        </div>
        <div class="d-flex flex-column align-items-center pt-2 icon seven">
            <i class="fa-solid fa-cow"></i>
            <p class="font mb-0">Farm</p>
        </div>
        <div class="d-flex flex-column align-items-center pt-2 icon seven">
            <i class="fa-regular fa-futbol"></i>
            <p class="font mb-0">Football</p>
        </div>
        <div class="d-flex flex-column align-items-center pt-2 icon thousand">
            <i class="fa-solid fa-umbrella-beach"></i>
            <p class="font mb-0">Beach</p>
        </div>
        <div class="d-flex flex-column align-items-center pt-2 icon thousand">
            <i class="fa-solid fa-water"></i>
            <p class="font mb-0">Sea</p>
        </div>
        <div class="d-flex flex-column align-items-center pt-2 icon thousand">
            <i class="fa-solid fa-golf-ball-tee"></i>
            <p class="font mb-0">Golf</p>
        </div>
        <div class="tax form-switch mb-0 d-flex justify-content-center align-items-center gap-2">
            <input class="form-check-input" type="checkbox" id="flexSwitchCheckReverse">
            <label class="form-check-label" for="flexSwitchCheckReverse">Display total after taxes</label>
        </div>
    </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-1">
        <% for(let list of allListings) { %>
            <a href="/listings/<%= list._id %>" class="listing-link">
                <div class="card col listing-card">
                    <img src="<%= list.image.url %>" class="card-img-top" alt="listing-img" style="height: 20rem">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="fw-bold mt-2"><%= list.title %></p>
                      <p>&#8377; <%= list.price.toLocaleString("en-IN") %> / night<i class ="tax-info"> + 18% GST</i></p>
                      
                    </div>
                </div>
            </a>
            <% } %>
    </div>
</body>



